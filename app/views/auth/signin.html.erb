
<section id="signin-section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= form_tag '#', method: 'post', class: 'signin-form' do %>
					<div class="signin-logo">
						<%= image_tag 'login-logo.png', alt: 'Schedroom' %>
					</div>

					<div class="form-group">
						<label class="control-label" for="">E-mail</label>
						<input class="form-control input-lg" id="email" placeholder="joao.silva@email.com" type="email" required>
					</div>
					
					<div class="form-group">
						<label class="control-label" for="">Senha</label>
						<input class="form-control input-lg" id="password" placeholder="*********" type="password" required>
					</div>

					<button class="btn btn-primary btn-lg signin-button" type="submit">
						Login
					</button>
					
				<% end %>
			</div>
		</div>
	</div>
</section>
